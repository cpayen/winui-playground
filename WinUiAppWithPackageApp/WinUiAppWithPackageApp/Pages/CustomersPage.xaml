            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0, 10">Clients et Contacts</TextBlock>
            
            <Button Grid.Column="2" Content="Nouveau client">
