    xmlns:components="using:WinUiAppWithPackageApp.Components"
    xmlns:viewmodels="using:WinUiAppWithPackageApp.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:CustomersViewModel}"
